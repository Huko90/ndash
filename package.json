{
  "name": "btctracker-desktop",
  "version": "1.0.6",
  "description": "BTC/Weather/PC dashboard desktop package with setup wizard",
  "author": "Niko",
  "engines": {
    "node": ">=20 <21"
  },
  "main": "desktop/main.js",
  "scripts": {
    "start": "electron .",
    "wizard": "BTCT_FORCE_WIZARD=1 electron .",
    "lint:syntax": "node -e \"['js/config-base.js','js/config.js','js/app.js','js/btc.js','js/stocks.js','js/weather.js','js/pc.js','desktop/main.js','desktop/preload.js','desktop/local-server.js','desktop/config-store.js'].forEach(f=>new Function(require('fs').readFileSync(f,'utf8'))); console.log('ok')\"",
    "test:smoke": "node scripts/smoke.js",
    "dist:win": "electron-builder --win nsis --publish never",
    "dist:win:publish": "electron-builder --win nsis --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "selfsigned": "^2.4.1"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.btctracker.desktop",
    "productName": "BTC Tracker Desktop",
    "publish": [
      {
        "provider": "github",
        "owner": "Huko90",
        "repo": "ndash"
      }
    ],
    "asar": true,
    "files": [
      "desktop/**/*",
      "css/**/*",
      "js/**/*",
      "index.html",
      "btcwallpaper.jpg",
      "weatherwallpaper.jpg",
      "pctempswallpaper.jpg",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  }
}
